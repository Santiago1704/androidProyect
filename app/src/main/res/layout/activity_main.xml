<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnGestionMesas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gestion_mesas"/>

        <Button
            android:id="@+id/btnConsultaVentas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consulta_ventas"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:padding="16dp">

            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English" />

            <Button
                android:id="@+id/btnPortuguese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Português" />

            <Button
                android:id="@+id/btnSpanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Español" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>